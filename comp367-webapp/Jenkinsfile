pipeline {
    agent any
    
    // Define the Docker access token
    environment {
        DOCKER_ACCESS_TOKEN = credentials('dckr_pat_F-5HKHwx4_bjRIV3zpO9LAN3WPY')
    }
    
    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
        
        stage('Build Maven') {
            steps {
                // Execute Maven clean and install commands
                bat 'mvn -f comp367-webapp/pom.xml clean install'
            }
        }
        
        stage('Code Coverage') {
            steps {
                // Generate code coverage reports with Jacoco
                script {
                    bat 'mvn -f comp367-webapp/pom.xml jacoco:report'
                }
            }
        }
        
        stage('Docker Build') {
            steps {
                script {
                    // Change directory to where the Dockerfile is located
                    dir('comp367-webapp') {
                        // Build Docker image
                        bat 'docker build -t comp367-webapp .'
                    }
                }
            }
        }
        
        stage('Docker Login') {
            steps {
                script {
                    // Login to Docker Hub using access token
                    bat 'docker login -u _json_key -p %DOCKER_ACCESS_TOKEN% https://index.docker.io/v1/'
                }
            }
        }
        
        stage('Docker Push') {
            steps {
                script {
                    // Push Docker image to Docker Hub
                    bat 'docker push comp367-webapp:latest'
                }
            }
        }
    }
    
    post {
        success {
            echo 'Build successful!'
            // Additional post-build actions if needed
        }
        failure {
            echo 'Build failed!'
            // Additional post-build actions if needed
        }
    }
}
