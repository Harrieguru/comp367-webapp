pipeline {
    agent any

    tools {
        maven 'Maven3' 
    }

    triggers {
        githubPush()
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    def mvnCMD = "mvn"
                    
                    // Build the Maven project
                    sh "${mvnCMD} clean install"
                }
            }
        }
    }

    post {
        success {
            echo 'Build successful!'
        }
    }
}
