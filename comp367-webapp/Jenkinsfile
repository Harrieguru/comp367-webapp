pipeline {
    agent any

    tools {
        maven 'MAVEN3'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Maven') {
            steps {
                script {
                    if (isUnix()) {
                        sh 'mvn clean install'
                    } else {
                        bat 'mvn clean install'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Build successful!'
        }
    }
}
