pipeline {
    agent any
    
    environment {
        DOCKER_PASSWORD = credentials('credentialID')
        DOCKER_IMAGE_TAG = "harrietatieno/comp367-webapp:latest" 
    }
    
    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
        
        stage('Build Maven') {
            steps {
                // Execute Maven clean and install commands
                bat 'mvn -f comp367-webapp/pom.xml clean install'
            }
        }
        
        stage('Code Coverage') {
            steps {
                // Generate code coverage reports with Jacoco
                script {
                    bat 'mvn -f comp367-webapp/pom.xml jacoco:report'
                }
            }
        }
        
        stage('Docker Build') {
            steps {
                script {
                    // Change directory to where the Dockerfile is located
                    dir('comp367-webapp') {
                        // Build Docker image with the specified tag
                        bat "docker build -t $DOCKER_IMAGE_TAG ."
                    }
                }
            }
        }
        
        stage('Docker Login') {
            steps {
                script {
                    // Login to Docker Hub using secret text credential
                    withCredentials([string(credentialsId: 'credentialID', variable: 'DOCKER_PASSWORD')]) {
                        bat 'docker login -u harrietatieno --password %DOCKER_PASSWORD%'
                    }
                }
            }
        }
        
        stage('Docker Push') {
            steps {
                script {
                    // Push Docker image to Docker Hub with the specified tag
                    bat "docker push $DOCKER_IMAGE_TAG"
                }
            }
        }
    }
    
    post {
        success {
            echo 'Build successful!'
            // Additional post-build actions if needed
        }
        failure {
            echo 'Build failed!'
            // Additional post-build actions if needed
        }
    }
}
